---
// modified from:
// https://flowbite.com/docs/components/carousel/

import { Picture } from "astro:assets";

import img1 from "../assets/carousel_imgs/img1.jpg";
import img2 from "../assets/carousel_imgs/img2.jpg";
import img3 from "../assets/carousel_imgs/img3.jpg";
import img4 from "../assets/carousel_imgs/img4.jpg";
import img5 from "../assets/carousel_imgs/img5.jpg";
import img6 from "../assets/carousel_imgs/img6.jpg";
import img7 from "../assets/carousel_imgs/img7.jpg";
import img8 from "../assets/carousel_imgs/img8.jpg";

let carousel = [
  {
    src: img1,
    alt: "Student Senate Event Image 1",
  },
  {
    src: img2,
    alt: "Student Senate Event Image 2",
  },
  {
    src: img3,
    alt: "Student Senate Event Image 3",
  },
  {
    src: img4,
    alt: "Student Senate Event Image 4",
  },
  {
    src: img5,
    alt: "Student Senate Event Image 5",
  },
  {
    src: img6,
    alt: "Student Senate Event Image 6",
  },
  {
    src: img7,
    alt: "Student Senate Event Image 7",
  },
  {
    src: img8,
    alt: "Student Senate Event Image 8",
  },
];
---

<div class="not-content">
  <div id="default-carousel" class="relative w-full" data-carousel="slide">
    <!-- Carousel wrapper -->
    <div class="relative overflow-hidden rounded-lg aspect-video mx-auto">
      {
        carousel.map(
          (
            slide,
            index //map through the images
          ) => (
            <div class={"duration-700 ease-in-out hidden"} data-carousel-item>
              <Picture
                widths={[320, 640, 768, 1024, 1280, 1536, 1920]}
                height={1080}
                width={1920}
                src={slide.src}
                formats={["avif", "webp"]}
                class="absolute block w-full h-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2"
                alt={slide.alt}
              />
            </div>
          )
        )
      }
    </div>
    <!-- Slider indicators -->
    <div
      class="absolute z-30 flex -translate-x-1/2 bottom-5 left-1/2 space-x-3 rtl:space-x-reverse"
    >
      {
        //add a button for each image
        carousel.map((_, index) => (
          <button
            type="button"
            class="w-3 h-3 rounded-full"
            aria-current={index === 0}
            aria-label={`Slide ${index + 1}`}
            data-carousel-slide-to={index}
          />
        ))
      }
    </div>
    <!-- Slider controls -->
    <button
      type="button"
      class="absolute top-0 start-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none bg-transparent"
      data-carousel-prev
    >
      <span
        class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none"
      >
        <svg
          class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 6 10"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M5 1 1 5l4 4"></path>
        </svg>
        <span class="sr-only">Previous</span>
      </span>
    </button>
    <button
      type="button"
      class="absolute top-0 end-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none bg-transparent"
      data-carousel-next
    >
      <span
        class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none"
      >
        <svg
          class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 6 10"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="m1 9 4-4-4-4"></path>
        </svg>
        <span class="sr-only">Next</span>
      </span>
    </button>
  </div>
</div>
